extends ../layouts/layout

block head
  title My Account

block content
  .container
    .row
      .col-sm-6.col-sm-offset-1
        .page-header
          h2 Profile Information
          br
          p.lead Username: #{user.username}
          p.lead Email: #{user.email}
          p.lead Enhanced Security: #{user.twofactor}
    if true
      .row
        .col-sm-6.col-sm-offset-1
          .page-header
            h2 Enhanced Security
          p Enhanced security adds an extra layer of protection to your account. Once enabled, a security code is required in addition to your password whenever you sign in. This code changes every 30 seconds making it <strong>very</strong> difficult for hackers to gain access to your account.
          br
          if user.twofactor
            a.btn.btn.btn-danger(href='/account/disable-otp')
              i.fa.fa-times
              | &nbsp;Disable Enhanced Security
          else
            a.btn.btn-success(href='/setup-otp')
              i.fa.fa-check
              | &nbsp;Enable Enhanced Security
